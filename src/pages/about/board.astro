---
import Layout from '../../layouts/Layout.astro';
---

<Layout>
	<div class="container mx-auto px-4 py-12">
		<h1 class="text-4xl md:text-5xl font-impact mb-12 text-center">Board of Directors</h1>

		<!-- Executive Committee -->
		<section class="mb-16">
			<h2 class="text-3xl font-impact mb-8 text-center">Executive Committee</h2>
			<div class="grid md:grid-cols-3 gap-8">
				<div class="text-center">
					<div class="w-48 h-48 mx-auto mb-4 bg-gray-200 rounded-full overflow-hidden">
						<img src="/images/placeholder.jpg" alt="Kathleen LeGrow" class="w-full h-full object-cover" />
					</div>
					<h3 class="text-2xl font-impact mb-2">Kathleen LeGrow</h3>
					<p class="text-gray-600">Business Systems Analyst, SS&C Technologies</p>
				</div>
				<div class="text-center">
					<div class="w-48 h-48 mx-auto mb-4 bg-gray-200 rounded-full overflow-hidden">
						<img src="/images/placeholder.jpg" alt="Tiffany Prout-Leitao" class="w-full h-full object-cover" />
					</div>
					<h3 class="text-2xl font-impact mb-2">Tiffany Prout-Leitao</h3>
					<p class="text-gray-600">President</p>
					<p class="text-gray-600">Owner / Director, Center Stage Dance Academy</p>
				</div>
				<div class="text-center">
					<div class="w-48 h-48 mx-auto mb-4 bg-gray-200 rounded-full overflow-hidden">
						<img src="/images/placeholder.jpg" alt="Richard Prout" class="w-full h-full object-cover" />
					</div>
					<h3 class="text-2xl font-impact mb-2">Richard Prout</h3>
					<p class="text-gray-600">Clerk Retired, President of DPEnterprises</p>
				</div>
			</div>
		</section>

		<!-- Board Members -->
		<section class="mb-16">
			<h2 class="text-3xl font-impact mb-8 text-center">Board Members</h2>
			<div class="grid md:grid-cols-2 gap-8">
				<div class="text-center">
					<div class="w-48 h-48 mx-auto mb-4 bg-gray-200 rounded-full overflow-hidden">
						<img src="/images/placeholder.jpg" alt="Elizabeth A Lopes" class="w-full h-full object-cover" />
					</div>
					<h3 class="text-2xl font-impact mb-2">Elizabeth A Lopes</h3>
					<p class="text-gray-600">Cronus Events, LLC</p>
				</div>
				<div class="text-center">
					<div class="w-48 h-48 mx-auto mb-4 bg-gray-200 rounded-full overflow-hidden">
						<img src="/images/placeholder.jpg" alt="Marilyn J. St. Johns" class="w-full h-full object-cover" />
					</div>
					<h3 class="text-2xl font-impact mb-2">Marilyn J. St. Johns</h3>
					<p class="text-gray-600">Retired, IBM</p>
				</div>
			</div>
		</section>

		<!-- Board of Advisors -->
		<section>
			<h2 class="text-3xl font-impact mb-8 text-center">Board of Advisors</h2>
			<div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
				<div class="text-center">
					<div class="w-48 h-48 mx-auto mb-4 bg-gray-200 rounded-full overflow-hidden">
						<img src="/images/placeholder.jpg" alt="Samantha Dean" class="w-full h-full object-cover" />
					</div>
					<h3 class="text-2xl font-impact mb-2">Samantha Dean</h3>
					<p class="text-gray-600">Occupational Therapist, Kennedy Donovan Center</p>
				</div>
				<div class="text-center">
					<div class="w-48 h-48 mx-auto mb-4 bg-gray-200 rounded-full overflow-hidden">
						<img src="/images/placeholder.jpg" alt="Vanessa Terrell" class="w-full h-full object-cover" />
					</div>
					<h3 class="text-2xl font-impact mb-2">Vanessa Terrell</h3>
					<p class="text-gray-600">Owner/Director The Pointe School of Dance</p>
				</div>
				<div class="text-center">
					<div class="w-48 h-48 mx-auto mb-4 bg-gray-200 rounded-full overflow-hidden">
						<img src="/images/placeholder.jpg" alt="Cathy Graziano" class="w-full h-full object-cover" />
					</div>
					<h3 class="text-2xl font-impact mb-2">Cathy Graziano</h3>
					<p class="text-gray-600">Executive Director, National Dance Foundation</p>
				</div>
				<div class="text-center">
					<div class="w-48 h-48 mx-auto mb-4 bg-gray-200 rounded-full overflow-hidden">
						<img src="/images/placeholder.jpg" alt="Jill Williams" class="w-full h-full object-cover" />
					</div>
					<h3 class="text-2xl font-impact mb-2">Jill Williams</h3>
					<p class="text-gray-600">Founder/CEO, Leap Studios</p>
				</div>
			</div>
		</section>
	</div>
</Layout> 