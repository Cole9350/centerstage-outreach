---
import Layout from '../layouts/Layout.astro';

const galleries = [
  {
    title: "Recent Performances",
    images: [
      {
        src: "/images/gallery/performance1.jpg",
        alt: "Holiday performance at Heritage Museum",
        caption: "Holiday performance at Heritage Museum & Gardens"
      },
      {
        src: "/images/gallery/performance2.jpg",
        alt: "Christmas Wonderland at Edaville",
        caption: "Christmas Wonderland performance at Edaville"
      },
      {
        src: "/images/gallery/performance3.jpg",
        alt: "Nursing Home Tour performance",
        caption: "Bringing joy to local nursing homes"
      }
    ]
  },
  {
    title: "Community Outreach",
    images: [
      {
        src: "/images/gallery/outreach1.jpg",
        alt: "Toy Drive collection",
        caption: "Annual Toy Drive for Plymouth Coalition"
      },
      {
        src: "/images/gallery/outreach2.jpg",
        alt: "Valentine's card making",
        caption: "Making Valentine's cards for nursing homes"
      },
      {
        src: "/images/gallery/outreach3.jpg",
        alt: "School supplies donation",
        caption: "School supplies collection for Latham Centers"
      }
    ]
  },
  {
    title: "Team Events",
    images: [
      {
        src: "/images/gallery/team1.jpg",
        alt: "Team practice",
        caption: "Weekly team practice sessions"
      },
      {
        src: "/images/gallery/team2.jpg",
        alt: "Competition preparation",
        caption: "Preparing for guiDANCE Experience Competition"
      },
      {
        src: "/images/gallery/team3.jpg",
        alt: "Team building",
        caption: "Team building and bonding activities"
      }
    ]
  }
];
---

<Layout title="Gallery | Center Stage Outreach Team">
  <div class="pt-24 pb-16">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl md:text-5xl font-bold text-center mb-8">Gallery</h1>
      <p class="text-xl text-gray-700 text-center max-w-3xl mx-auto mb-16">
        Take a look at our performances, community outreach events, and team activities through the years.
      </p>

      {galleries.map((gallery) => (
        <div class="mb-16">
          <h2 class="text-3xl font-bold mb-8">{gallery.title}</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {gallery.images.map((image) => (
              <div class="group relative overflow-hidden rounded-lg shadow-md bg-white">
                <div class="aspect-w-16 aspect-h-9">
                  <img
                    src={image.src}
                    alt={image.alt}
                    class="w-full h-full object-cover transition duration-300 group-hover:scale-110"
                  />
                </div>
                <div class="absolute inset-0 bg-gradient-to-t from-black/75 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                  <div class="absolute bottom-0 left-0 right-0 p-4">
                    <p class="text-white text-sm">{image.caption}</p>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>

    <!-- Instagram Feed Section -->
    <div class="container mx-auto px-4 mt-16">
      <div class="text-center">
        <h2 class="text-3xl font-bold mb-8">Follow Us on Instagram</h2>
        <p class="text-xl text-gray-700 mb-12">
          Stay updated with our latest performances and behind-the-scenes moments.
        </p>
        <a
          href="https://instagram.com/centerstageoutreach"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center text-primary hover:text-primary-dark font-bold"
        >
          <span class="mr-2">@centerstageoutreach</span>
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0C8.74 0 8.333.015 7.053.072 5.775.132 4.905.333 4.14.63c-.789.306-1.459.717-2.126 1.384S.935 3.35.63 4.14C.333 4.905.131 5.775.072 7.053.012 8.333 0 8.74 0 12s.015 3.667.072 4.947c.06 1.277.261 2.148.558 2.913.306.788.717 1.459 1.384 2.126.667.666 1.336 1.079 2.126 1.384.766.296 1.636.499 2.913.558C8.333 23.988 8.74 24 12 24s3.667-.015 4.947-.072c1.277-.06 2.148-.262 2.913-.558.788-.306 1.459-.718 2.126-1.384.666-.667 1.079-1.335 1.384-2.126.296-.765.499-1.636.558-2.913.06-1.28.072-1.687.072-4.947s-.015-3.667-.072-4.947c-.06-1.277-.262-2.149-.558-2.913-.306-.789-.718-1.459-1.384-2.126C21.319 1.347 20.651.935 19.86.63c-.765-.297-1.636-.499-2.913-.558C15.667.012 15.26 0 12 0zm0 2.16c3.203 0 3.585.016 4.85.071 1.17.055 1.805.249 2.227.415.562.217.96.477 1.382.896.419.42.679.819.896 1.381.164.422.36 1.057.413 2.227.057 1.266.07 1.646.07 4.85s-.015 3.585-.074 4.85c-.061 1.17-.256 1.805-.421 2.227-.224.562-.479.96-.899 1.382-.419.419-.824.679-1.38.896-.42.164-1.065.36-2.235.413-1.274.057-1.649.07-4.859.07-3.211 0-3.586-.015-4.859-.074-1.171-.061-1.816-.256-2.236-.421-.569-.224-.96-.479-1.379-.899-.421-.419-.69-.824-.9-1.38-.165-.42-.359-1.065-.42-2.235-.045-1.26-.061-1.649-.061-4.844 0-3.196.016-3.586.061-4.861.061-1.17.255-1.814.42-2.234.21-.57.479-.96.9-1.381.419-.419.81-.689 1.379-.898.42-.166 1.051-.361 2.221-.421 1.275-.045 1.65-.06 4.859-.06l.045.03zm0 3.678c-3.405 0-6.162 2.76-6.162 6.162 0 3.405 2.76 6.162 6.162 6.162 3.405 0 6.162-2.76 6.162-6.162 0-3.405-2.76-6.162-6.162-6.162zM12 16c-2.21 0-4-1.79-4-4s1.79-4 4-4 4 1.79 4 4-1.79 4-4 4zm7.846-10.405c0 .795-.646 1.44-1.44 1.44-.795 0-1.44-.646-1.44-1.44 0-.794.646-1.439 1.44-1.439.793-.001 1.44.645 1.44 1.439z"/>
          </svg>
        </a>
      </div>
    </div>
  </div>
</Layout> 