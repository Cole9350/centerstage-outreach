const upcomingWorkshops = [
  {
    title: "Social Media Safety Workshop",
    date: "March 15, 2024",
    time: "2:00 PM - 4:00 PM",
    location: "Plymouth Studio",
    description: "Learn about staying safe on social media platforms and protecting your online presence."
  },
  {
    title: "Self-Esteem Building Workshop",
    date: "April 5, 2024",
    time: "1:00 PM - 3:00 PM",
    location: "Cape Cod Community College",
    description: "A workshop focused on building confidence and self-esteem through dance and movement."
  },
  {
    title: "Dance Education Best Practices",
    date: "April 20, 2024",
    time: "10:00 AM - 12:00 PM",
    location: "Plymouth Studio",
    description: "For dance educators and instructors: learn the latest techniques and best practices in dance education."
  }
];
---

<Layout title="Programs | Center Stage Outreach Team">
  <div class="pt-24 pb-16">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl md:text-5xl font-bold text-center mb-8">Our Programs</h1>
      <p class="text-xl text-gray-700 text-center max-w-3xl mx-auto mb-16">
        Through our diverse range of programs, we aim to make a positive impact in our community while fostering growth, creativity, and connection through dance.
      </p>

      <!-- Main Programs -->
      <section class="mb-20">
        <div class="grid md:grid-cols-2 gap-8">
          {programs.map((program) => (
            <div class="bg-white rounded-lg shadow-md p-8">
              <div class="w-16 h-16 bg-primary rounded-full flex items-center justify-center mb-6">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={program.icon} />
                </svg>
              </div>
              <h2 class="text-2xl font-bold mb-4">{program.title}</h2>
              <p class="text-gray-700 mb-6">{program.description}</p>
              <ul class="space-y-3">
                {program.features.map((feature) => (
                  <li class="flex items-start">
                    <svg class="w-5 h-5 text-primary mt-1 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </section>

      <!-- Upcoming Workshops -->
      <section class="mb-20">
        <h2 class="text-3xl font-bold text-center mb-12">Upcoming Workshops</h2>
        <div class="grid md:grid-cols-3 gap-8">
          {upcomingWorkshops.map((workshop) => (
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
              <div class="p-6">
                <h3 class="text-xl font-bold mb-2">{workshop.title}</h3>
                <div class="space-y-2 mb-4">
                  <div class="flex items-center text-gray-600">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    {workshop.date}
                  </div>
                  <div class="flex items-center text-gray-600">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    {workshop.time}
                  </div>
                  <div class="flex items-center text-gray-600">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    {workshop.location}
                  </div>
                </div>
                <p class="text-gray-700">{workshop.description}</p>
              </div>
            </div>
          ))}
        </div>
      </section>

      <!-- Get Involved CTA -->
      <section class="bg-primary text-white rounded-lg p-12 text-center">
        <h2 class="text-3xl font-bold mb-6">Get Involved</h2>
        <p class="text-xl mb-8 max-w-2xl mx-auto">
          Want to participate in our programs or support our mission? There are many ways to get involved with Center Stage Outreach Team.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/request" class="bg-white text-primary hover:bg-gray-100 font-bold py-3 px-8 rounded-full transition duration-300">
            Request a Show
          </a>
          <a href="/sponsors" class="border-2 border-white hover:bg-white hover:text-primary font-bold py-3 px-8 rounded-full transition duration-300">
            Become a Sponsor
          </a>
        </div>
      </section>
    </div>
  </div>
</Layout> 