---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us | Center Stage Outreach Team">
  <div class="pt-24 pb-16">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl md:text-5xl font-bold text-center mb-8">Contact Us</h1>
      <p class="text-xl text-gray-700 text-center max-w-3xl mx-auto mb-16">
        Have questions about our programs or want to get involved? We'd love to hear from you. Get in touch with us using the form below or through our other contact channels.
      </p>

      <div class="grid md:grid-cols-2 gap-12 max-w-6xl mx-auto">
        <!-- Contact Form -->
        <div>
          <form class="bg-white rounded-lg shadow-md p-8">
            <div class="mb-6">
              <label for="name" class="block text-gray-700 font-medium mb-2">Name</label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary focus:border-transparent"
              />
            </div>

            <div class="mb-6">
              <label for="email" class="block text-gray-700 font-medium mb-2">Email</label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary focus:border-transparent"
              />
            </div>

            <div class="mb-6">
              <label for="subject" class="block text-gray-700 font-medium mb-2">Subject</label>
              <select
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary focus:border-transparent"
              >
                <option value="">Select a subject</option>
                <option value="general">General Inquiry</option>
                <option value="programs">Programs Information</option>
                <option value="performances">Performance Booking</option>
                <option value="sponsorship">Sponsorship</option>
                <option value="volunteer">Volunteer Opportunities</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div class="mb-6">
              <label for="message" class="block text-gray-700 font-medium mb-2">Message</label>
              <textarea
                id="message"
                name="message"
                rows="6"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-primary focus:border-transparent"
              ></textarea>
            </div>

            <button
              type="submit"
              class="w-full bg-primary hover:bg-primary-dark text-white font-bold py-3 px-8 rounded-full transition duration-300"
            >
              Send Message
            </button>
          </form>
        </div>

        <!-- Contact Information -->
        <div>
          <div class="bg-white rounded-lg shadow-md p-8 mb-8">
            <h2 class="text-2xl font-bold mb-6">Contact Information</h2>
            <div class="space-y-4">
              <div class="flex items-start">
                <svg class="w-6 h-6 text-primary mt-1 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <div>
                  <h3 class="font-bold mb-1">Address</h3>
                  <p class="text-gray-700">116 State Rd</p>
                  <p class="text-gray-700">Plymouth, MA 02360</p>
                </div>
              </div>

              <div class="flex items-start">
                <svg class="w-6 h-6 text-primary mt-1 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <div>
                  <h3 class="font-bold mb-1">Email</h3>
                  <a href="mailto:info@centerstageoutreach.org" class="text-primary hover:underline">
                    info@centerstageoutreach.org
                  </a>
                </div>
              </div>

              <div class="flex items-start">
                <svg class="w-6 h-6 text-primary mt-1 mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div>
                  <h3 class="font-bold mb-1">Office Hours</h3>
                  <p class="text-gray-700">Monday - Friday: 9:00 AM - 5:00 PM</p>
                  <p class="text-gray-700">Saturday - Sunday: Closed</p>
                </div>
              </div>
            </div>
          </div>

          <div class="bg-white rounded-lg shadow-md p-8">
            <h2 class="text-2xl font-bold mb-6">Connect With Us</h2>
